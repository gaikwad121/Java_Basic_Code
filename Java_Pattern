		Scanner sc=new Scanner(System.in);
		System.out.println("Enter a number1");
		int num=sc.nextInt();
        sc.close();
   
        for(int i=1;i<=num;i++) {
        
        for(int j=1;j<=num;j++) {
        	System.out.print("*");
        }
        
           System.out.println();
           }}}


