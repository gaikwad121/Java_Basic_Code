package Utility;

import java.util.Scanner;

public class Java_Code_Program {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter a number1");
		int num=sc.nextInt();
        sc.close();
   
        for(int i=1;i<=num;i++) {
        for(int j=1;j<=i;j++) {
        	System.out.print("*");
	
        }
        
        System.out.println();

        }
        for(int i=num-1;i>=1;i--) {
            for(int j=1;j<=i;j++) {
            	System.out.print("*");
	}
            System.out.println();

        }}}

// K pattern


******
*****
****
***
**
*
**
***
****
*****
******

package Utility;

import java.util.Scanner;

public class Java_Code_Program {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter a number1");
		int num=sc.nextInt();
        sc.close();
   
        
        for(int i=num;i>=1;i--) {
            for(int j=1;j<=i;j++) {
            	System.out.print("*");
	}
            System.out.println();

            }
            for(int i=2;i<=num;i++) {
                for(int j=1;j<=i;j++) {
                	System.out.print("*");
                }
            System.out.println();

        }}}
